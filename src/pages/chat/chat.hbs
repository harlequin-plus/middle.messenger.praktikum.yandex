<div class="wrapper">
  {{{sidebar}}}
  <div class="chat">
    <header class="chat__header header">
        <a href="/settings" class="chat-info__user">
          {{user.first_name}} {{user.second_name}}
        </a>
      
        <div class="chat-info">
          {{#if isChatSelected}}
            <div class="chat-info__adduser">
              {{{userLoginInput}}}
              {{{addUserButton}}}
              {{{userList}}}
            </div>
          {{/if}}
          
          {{#if isChatSelected}}
            {{{usersInChat}}}
           <!--{{{chatInfoButton}}}-->
          {{/if}}
        </div>
      

    </header>
    <section class="chat__content">
      <div>
                <div class="create-chat-wrap">
          {{{chatNameInput}}}
          {{{addChatButton}}} 
        </div>
        {{{chatList}}}

      </div>
      
      <div class="chat__window">
        {{#if isChatSelected}}
          <div class="chat-wrap-messages">
            <div class="chat-messages">
              
              {{#each messages}}
                {{#if this.isMe}}
                  <div class="chat-messages__message chat-messages__message_my">
                    {{this.content}}
                  </div>
                {{else }}
                  <div class="chat-messages__message chat-messages__message_others">
                    {{this.content}}
                    <span class="author">{{this.fullName}}</span>
                  </div>
                {{/if }}

                
              {{/each}}
              
