            {{{sendMessageButton}}}
          </form>
        {{else}}
          <div class="chat-empty">
            <img class="chat-empty__img" src="{{balloon}}" alt="">
            <p class="chat-empty__text">Выберите чат чтобы отправить сообщение</p>
